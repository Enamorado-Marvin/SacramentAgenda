@model SacramentAgenda.Models.Agenda

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Agenda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SacramentMeetingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SacramentMeetingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PresidingLeader)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PresidingLeader)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConductingLeader)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConductingLeader)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpeningSong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpeningSong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClosingSong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosingSong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Benediction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Benediction)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignments)
        </dt>*@
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Speaker Name</th>
                    <th>Subject</th>
                </tr>
                @foreach (var item in Model.Assignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Speaker.SpeakerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Speaker.Subject)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
